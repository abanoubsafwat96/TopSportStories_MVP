<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.abanoub.topsportstories_MVP">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.PopupOverlay">

        <activity
            android:name="com.example.abanoub.topsportstories_MVP.main.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.PopupOverlay.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.abanoub.topsportstories_MVP.detailed.DetailedActivity"
            android:label="@string/title_activity_detailed"
            android:theme="@style/AppTheme.PopupOverlay.NoActionBar"></activity>
    </application>

</manifest>